{
    "name": "topphp/topphp-client",
    "type": "library",
    "description": "客户端管理组件",
    "license": "MIT",
    "authors": [
        {
            "name": "topphp",
            "email": "sleep@kaituocn.com",
            "homepage": "https://github.com/topphp",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.2",
        "guzzlehttp/guzzle": "^6.5",
        "predis/predis": "^1.1",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Topphp\\TopphpClient\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Topphp\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit -c ./phpunit.xml.dist",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "think": {
            "services": [],
            "config": {
                "topphpClientHttp": "config/topphpClientHttp.php",
                "topphpClientRedis": "config/topphpClientRedis.php",
                "topphpClientSocket": "config/topphpClientSocket.php"
            }
        }
    },
    "config": {
        "sort-packages": true
    },
    "repositories": {
        "packagist": {
            "type": "composer",
            "url": "https://mirrors.aliyun.com/composer"
        }
    }
}
